@model Player
@{
    ViewBag.Title = "Edit Player";
}
@if (TempData["warning"] != null)
{
    <div class="alert alert-danger">@TempData["warning"]</div>
}
<div class="float-right">
    <a class="btn btn-danger" asp-action="Logout" asp-controller="Account">Log Out</a>
</div>
<form asp-action="EditPlayer" method="post">
    <input type="hidden" asp-for="PlayerID" />
    <input type="hidden" asp-for="ClubID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            @for (int i = 16; i < 36; i++)
            {
                <option>@i</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <div><span asp-validation-for="Position" class="text-danger"></span></div>
        <select asp-for="Position" class="form-control">
            <option>Forward</option>
            <option>Midfielder</option>
            <option>Defender</option>
            <option>Goalkeeper</option>
        </select>
    </div>
    <button class="btn btn-success col-12" type="submit">Save Edit</button>
</form>
