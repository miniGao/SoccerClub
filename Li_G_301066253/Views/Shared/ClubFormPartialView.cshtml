@model Club

<div class="form-group">
    <label asp-for="Name"></label>
    <div><span asp-validation-for="Name" class="text-danger"></span></div>
    <input asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Information"></label>
    <div><span asp-validation-for="Information" class="text-danger"></span></div>
    <textarea asp-for="Information" class="form-control" rows="10"></textarea>
</div>
<div class="form-group">
    <label asp-for="Address"></label>
    <div><span asp-validation-for="Address" class="text-danger"></span></div>
    <input asp-for="Address" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Phone"></label>
    <div><span asp-validation-for="Phone" class="text-danger"></span></div>
    <input asp-for="Phone" class="form-control" />
</div>